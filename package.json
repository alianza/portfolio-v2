{
  "name": "portfolio-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p next:dev decap-server watch-styles",
    "build": "run-p build-styles next:build",
    "analyze": "cross-env ANALYZE=true yarn build",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "decap-server": "npx decap-server",
    "watch-styles": "run-p watch-sass:* watch-tailwind:*",
    "build-styles": "run-p build-sass:* build-tailwind:*",
    "watch-tailwind:globals": "npx tailwindcss -i ./public/styles/globals.css -o ./public/styles/globals.css --watch",
    "watch-tailwind:content": "npx tailwindcss -i ./public/styles/content.module.css -o ./public/styles/content.module.css --watch",
    "watch-sass:content": "sass components/mdContent/mdContent.module.scss ./public/styles/content.module.css --no-source-map --watch",
    "watch-sass:globals": "sass styles/globals.scss ./public/styles/globals.css --no-source-map --watch",
    "build-sass:content": "sass components/mdContent/mdContent.module.scss ./public/styles/content.module.css --no-source-map",
    "build-sass:globals": "sass styles/globals.scss ./public/styles/globals.css --no-source-map",
    "build-tailwind:content": "npx tailwindcss -i ./public/styles/content.module.css -o ./public/styles/content.module.css",
    "build-tailwind:globals": "npx tailwindcss -i ./public/styles/globals.css -o ./public/styles/globals.css"
  },
  "dependencies": {
    "autoprefixer": "^10.4.18",
    "eslint": "8.56.0",
    "highlight.js": "^11.9.0",
    "next": "14.1.3",
    "nextjs-progressbar": "^0.0.16",
    "postcss": "8.4.35",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-transition-scroll": "^1.1.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint-config-next": "14.1.3",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "marked": "^11.2.0",
    "marked-highlight": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "prop-types": "^15.8.1",
    "sass": "^1.71.1",
    "tailwindcss": "3.4.1"
  }
}
